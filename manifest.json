{
    "name": "Slash",
    "description": "Generate summaries of written media to save time!",
    "version": "0.1.0",
    "manifest_version": 2,
    "author": "Raj Chopra",
    "background": {
        "script": ["background.js"]
    },
    "browser_action": {
        "default_title": "Slash",
        "default_popup": "popout.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>","https://*/*"],
        "js": ["content.js"]
    }],
    "permissions": ["tabs", "activeTab"]
}